@{
    ViewData["Title"] = "Dashboard";
}

@section Styles{
        <link rel="stylesheet" href="~/css/DashboardCard.css" />
}

@model List<DashboardCard>



<div class="text-center">
    <h1 class="hell display-4">Mortgage Monitoring Dashboard</h1>

    <div class="container">
        <div class="row">
            @foreach (var card in Model)
            {
                    <div class="col-md-3">
                        <div class="carding card">
                        @*<img src=@card.imageUrl class="card-img-top" alt="No Image">*@
                            <div class="card-body">
                                <h5 class="card-title">@card.title</h5>
                                <p class="card-text">@card.description</p>
                                <a href="@card.linkUrl" class="btn btn-primary">@card.title</a>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>
